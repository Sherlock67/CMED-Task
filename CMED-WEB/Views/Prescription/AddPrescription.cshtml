@model CMED_DataAcessLayer.Models.Prescription
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- displays site properly based on user's device -->

  <link rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png">
  
  <title>Frontend Mentor | Intro component with sign up form</title>
  <link rel="stylesheet" href="css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- Feel free to remove these styles or customise in your own stylesheet 👍 -->
  <style>
    .attribution { font-size: 11px; text-align: center; }
    .attribution a { color: hsl(228, 45%, 44%); }
  </style>
</head>
<body style="background-image: url(/images/bg-intro-desktop.png); background-color: aqua;">
<section >
  <div class="container">
    <div class="row  top-align mt-5 justify-content-center align-items-center">
      <div class="col col-12 col-md-6">
        <h1 class=" text-white">Learn to code by <br> watching others</h1>
        <p class="fw-bold text-white">See how experienced developers solve problems in real-time. Watching scripted tutorials is great, 
          but understanding how developers think is invaluable.</p>
      </div>
      <div class="col col-12 col-md-6">
        <div class="bg-primary rounded pt-2 pb-2">
          <p class="text-center fw-bold text-white"><span>Please Register Yourself</span></p>
        </div>
        <div class="mt-3 bg-white p-5 rounded">
          @using (Html.BeginForm()){
               <div class="input-group mb-2">
              <label for="validationServer03" class="form-label"></label>
             <input type="datetime" asp-for=" Prescription_Date" class="form-control "  placeholder="First Name" aria-label="FirstName">
              
            </div>
            <div class="input-group  mb-2">
           
              <input type="text" asp-for="Name"class="form-control " placeholder="Last Name" aria-label="Last Name">
            
                       
            </div>
            <div class="input-group  mb-2">
            
              <input type="number" asp-for="Age"  class="form-control "  placeholder="Please Enter Your Email" aria-label="Email">
  
            </div>
            <div class="input-group   mb-2">
              <input type="text" asp-for="Gender"  class="form-control "  placeholder="Please Enter Your Password" aria-label="Password">

            
            </div>
                     <div class="input-group   mb-2">
              <input type="text"  asp-for="Diagnosis"  class="form-control " placeholder="Please Confirm Your Password" aria-label="Password">
        
            
            </div>
             <div class="input-group   mb-2">
              <input type="text"  asp-for="Medicine"  class="form-control " placeholder="Please Confirm Your Password" aria-label="Password">
        
            
            </div>
                         <div class="input-group   mb-2">
              <input type="text"  asp-for="NextVisitDate"  class="form-control " placeholder="Please Confirm Your Password" aria-label="Password">
        
            
            </div>
            <button type="submit" class="mt-2 w-100 green btn btn-success">Register </button>
            <p class="para p-2">By clicking the button, you are agreeing to our <span class="terms">Terms and Services</span></p>
          }
        </div>
      </div>
    </div>

</section>

  
  <footer class="mt-5">
    <p class="attribution">
      Challenge by <a href="https://www.frontendmentor.io?ref=challenge" target="_blank">Frontend Mentor</a>. 
      Coded by <a href="#">Your Name Here</a>.
    </p>
  </footer>
  @*<script src="js/index.js"></script>*@
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>