@model CMED_DataAcessLayer.Models.Prescription
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prescription</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body style="background-color:aliceblue">
    <partial name="_notification" />
    <div class="container">
        @using (Html.BeginForm())
        {
            <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Prescription Date</label>
            <input type="datetime"   asp-for=" Prescription_Date" class="form-control" placeholder="Prescription Date">
          </div>
          <div class="form-group col-md-6">
            <label for="inputPassword4">Patient Name</label>
            <input type="text" asp-for="Name" class="form-control"  placeholder="Patient Name">
          
        </div>
        </div>
        <div class="form-group">
          <label for="inputAddress">Patient Age</label>
          <input type="number" asp-for="Age" class="form-control"  placeholder="Patient Age">
           
      </div>
        <div class="form-group">
          <label for="inputAddress2">Patient Gender</label>
          <input type="text" asp-for="Gender" class="form-control"  placeholder="Patient Gender">
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputCity">Diagnosis</label>
            <textarea type="text" asp-for="Diagnosis" class="form-control"  placeholder="Diagnosis"></textarea>
          </div>
          <div class="form-group col-md-4">
            <label for="inputState">Medicine</label>
            <input type="text" asp-for="Medicine" class="form-control" placeholder="Medicine">
          </div>
          <div class="form-group col-md-2">
            <label for="inputZip">Next Visit Date</label>
            <input type="datetime"  asp-for="NextVisitDate" class="form-control"  placeholder="Next Visit Date">
          </div>
        </div>
  
       <button type="submit" class="mt-2 w-100 green btn btn-success"> <i class="fa-solid fa-prescription"></i>Create Prescription</button>
            <a class="mt-2 w-100 green btn btn-success" asp-controller ="Prescription" asp-action="AllPrescription" class="btn btn-primary">
           <i class="bi bi-plus-lg"></i> &nbsp See All Prescription
       </a>
        }
    </div>

</body>
</html>